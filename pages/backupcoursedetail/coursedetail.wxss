/* coursedetail.wxss */

.avatar-row {
  width: 100%;
  height: 120rpx;
}

.avatar-name {
  display: inline-block;
  line-height: 100rpx;
  top: -30rpx;
  position: relative;
  margin-left: 20rpx;
  color: #666;
}

.userinfo-avatar {
  width: 96rpx;
  height: 96rpx;
  margin-top: 15rpx;
  border-radius: 50%;
  margin-left: 40rpx;
}

.action-row {
  height: 140rpx;
  line-height: 140rpx;
  margin-top: 10rpx;
  border-bottom: 1rpx solid #e3e3e3;
}

.action-name {
  display: inline-block;
  width: 50%;
  text-align: center;
  height: 100rpx;
  color: #555;
  font-weight: 800;
}

.action-repeat {
  display: inline-block;
  
  height: 100rpx;
  text-align: center;
  /*border-right: solid 6rpx #666;*/
}

.action-weight {
  display: inline-block;

  height: 100rpx;
  text-align: center;
}

.action-weight-num {
  font-size: 1.2rem;
  color: #555;
}

.action-unit {
  font-size: 0.8rem;
  color: #999;
  margin-left: 10rpx;
}

.action-comments {
  padding: 20rpx 0 0;
  text-align: center;
}

.action-comments > span {
  border-bottom: 6rpx solid #4fd2c2;
  line-height: 50rpx;
  height: 50rpx;
  display: inline-block;
  font-weight: 900;
  font-size: 1.1rem;
  color: #333;
}
.picker {
  position:fixed;
  bottom:0;
  width:100%;
  background:#fcfcfc;
  box-shadow:0px -6rpx 12rpx rgba(0,0,0,.15);
  text-align: center;
  font-size: 0.8rem;
}

.picker-close {
  position:absolute;
  right:10rpx;
  top:4rpx;
  padding: 10rpx 20rpx 40rpx;
}

.body-view  text {
  margin: 0 20rpx;
}
.survey {
  position: fixed;
  bottom: 0;
  width: 100%;
  background: #fcfcfc;
  box-shadow:0px -6rpx 12rpx rgba(0,0,0,.15);
  padding: 10rpx 0;
  font-size: 0.8rem;
  padding-bottom: 40rpx;
}
.survey-item {
  margin-bottom: 40rpx;
  padding-left:20rpx;
}
.survey-submit {
  border:1rpx solid #4fd2c2;
  padding:2px 4px;
  color:#4fd2c2;
  position:absolute;
  top:20rpx;
  right:20rpx

}
.survey-item-title {
  font-size: 0.9rem;
   margin-bottom: 16rpx;
   font-weight: 400;
}
label {
  color:#444;
}