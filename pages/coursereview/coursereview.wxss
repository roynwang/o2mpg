/* pages/coursereview/coursereview.wxss */
.questionair {
  display:flex;
  flex-direction:column;
  align-items:center;
  width:100%;
}
.comments-card, .confirm-comments-card {
  margin: 20rpx;
  background: #42d2c2;
  box-shadow: 0px 0px 16px rgba(0, 0, 0, 0.4);
  height: 500rpx;
  width: inherit;
  color: white;
  border-radius: 8rpx;
  padding: 8rpx 20rpx;
  margin-bottom: 30rpx;
}
.button-view {
  display: flex;
  align-items: center;
  height: 75%;
}

.customer-confirm {
  color: rgba(255, 255, 255, 0.9);
  background: rgba(18, 134, 133, 0.7);
  letter-spacing: 2rpx;
  font-size: 1.6rem;
  min-width: 480rpx;
  font-weight: 900;
  box-shadow: 4rpx 6rpx 10rpx 2rpx rgba(18, 134, 133, 1);
  display: none;
}

.customer-confirm::after {
  border: none;
  width: inherit;
  height: 320rpx;
  position: relative;
  top: -340rpx;
  background: rgba(255, 255, 255, 0.8);
}

.course-label {
  border-bottom: 2rpx white solid;
  width: 100%;
  height: 25%;
  display: flex;
  align-items: center;
}
.incompleted text {
  filter:blur(5px);
}

.incompleted .questionair {
  display:flex;
}
.incompleted button {
  display: block;
}
.blur {
  filter:blur(5px);
}
.comments-card .course-label text {
  color: #444
}

.questionair {
  display:none;
  flex-direction:column;
  align-items:center;
  width:100%;
}
.questionair text {
color:#333;
filter:none;
font-size:1.4rem;
opacity:1;
font-weight:900;

}
.questionair .button-group {
  display:flex;
  justify-content:space-between;
}

.questionair .button-group button {
  width: 6rem;
  margin: 0 40rpx;
  color: rgba(255, 255, 255, 0.9);
  background: rgba(18, 134, 133, 0.7);
  letter-spacing: 2rpx;
  font-size: 1.2rem;
  line-height:2.2rem;
  font-weight: 900;
  box-shadow: 4rpx 6rpx 10rpx 2rpx rgba(18, 134, 133, 1);
}
.questionair .button-group button.small {
  font-size:0.8rem;
  letter-spacing:0;
  width:8rem;
}
.questionair .button-group button::after {
  border: none;
}